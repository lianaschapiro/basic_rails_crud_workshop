<h1>All Posts</h1>
<p>[<a href="/users">show all users</a>]</p>
<hr>
<p><%= link_to "New Post", new_post_path %></p>

<% @posts.reverse.each do |t| %>
	<h2><%= t.title %></h2>
	<p><%= t.body %></p>
	<p><%= link_to "Show Post", post_path(t) %></p>
	<p><%= link_to "Edit Post", edit_post_path(t) %></p>
	<p><%= link_to "Delete Post", t, method: :delete %></p>
	<br>
<% end %>
