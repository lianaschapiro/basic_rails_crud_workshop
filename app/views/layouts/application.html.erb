<!DOCTYPE html>
<html>
<head>
  <title>LschapiroBasicRailsWorkshop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
		<% if flash[:notice] %>
			<p style="font-weight:bold;background-color:pink"><%= flash[:notice] %></p>
		<% end %>

		<% if @current_user %>
			<p>Logged in as <%= @current_user.username %></p>
		<% else %>
			<p>Not logged in</p>
		<% end %>

		<a href="/login">Log In</a>
		<br>
		<a href="/logout">Log Out</a>
		

<%= yield %>

</body>
</html>
